<%- include('./partials/header') %> <%- include('./partials/navbar') %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= foundBlog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <img
        src="<%= foundBlog.image %>"
        alt="blog picture"
        class="ui centered rounded image"
      />
      <div class="content">
        <span><%= foundBlog.created.toDateString() %> </span>
      </div>
      <div class="description">
        <p><%- foundBlog.body %></p>
      </div>
      <a
        class="ui orange inverted button"
        href="/blogs/<%= foundBlog._id %>/edit "
        >Edit Blog</a
      >
      <form
        method="POST"
        action="/blogs/<%= foundBlog._id %>?_method=DELETE "
        id="delete"
      >
        <button class="ui red inverted button">DELETE</button>
      </form>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
