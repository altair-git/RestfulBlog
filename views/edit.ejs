<%- include('./partials/header') %> <%- include('./partials/navbar') %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Blog</div>
  <form
    class="ui form"
    action="/blogs/<%= blog._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%=blog.title  %> " />
    </div>

    <div class="field">
      <label for="image">Image</label>
      <input
        type="text"
        name="image"
        placeholder="image"
        id="image"
        value="<%=blog.image  %> "
      />
    </div>
    <div class="field">
      <label for="post">Blog content</label>
      <textarea
        name="body"
        id="post"
        cols="30"
        rows="5"
        placeholder="Blog post goes here"
      >
"<%=blog.body  %> "</textarea
      >
    </div>

    <input type="Submit" class="ui violet big basic button" />
  </form>
</div>

<%- include('./partials/footer') %>
